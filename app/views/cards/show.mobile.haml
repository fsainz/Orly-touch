- card ||=@card
- next_id ||=@next_id
- prev_id ||=@prev_id
%div{:id => "s#{card.id}"}
    .toolbar
        = link_to "Back", nil, :class => "back"
        %h1= card.name
    #quotes
        // link_to (image_tag card.image_path), "#s#{next_id}", :class=>"slideleft"
        .card_image= image_tag card.image_path.to_s
        = link_to image_tag("../themes/jqt/img/chevron_circle.png"), "#s#{prev_id}", :class=>"prev slideright" if prev_id
        = link_to image_tag("../themes/jqt/img/chevron_circle.png"), "#s#{next_id}", :class=>"next slideleft" if next_id
    .info
        - card.description.split("\n").each do |text|
            %p= text